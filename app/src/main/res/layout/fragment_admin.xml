<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Admin">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="50dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="50dp"
          android:text="THE GETTER AND SETTER METHODS AVAILABLE FOR THE ADMINISTRATOR"
          android:textAlignment="center"
          android:textSize="22sp"
          android:textStyle="bold|italic"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <Button
          android:id="@+id/buttonAbout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="64dp"
          android:layout_marginEnd="64dp"
          android:layout_marginBottom="32dp"
          android:text="Know More"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginEnd="32dp"
          android:layout_marginBottom="16dp"
          android:text="To Know More about the methods of the Administrator and their working, click the button below"
          android:textAlignment="center"
          android:textStyle="italic"
          app:layout_constraintBottom_toTopOf="@+id/buttonAbout"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

      <ScrollView
          android:id="@+id/scrollView2"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="16dp"
          android:background="@drawable/backgroundscroll"
          app:layout_constraintBottom_toTopOf="@+id/textView2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textViewAdminGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="1. Getter Functions for the Admin"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonGetProposalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Proposal Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAdminGet" />

            <Button
                android:id="@+id/buttonGetTotalProposal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Total Proposal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetProposalDescription" />

            <Button
                android:id="@+id/buttonGetWinningProposalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Winning Proposal Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetTotalProposal" />


            <Button
                android:id="@+id/buttonGetWinningProposalID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Winning Proposal ID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetWinningProposalDescription" />

            <Button
                android:id="@+id/buttonGetWorkflowStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Workflow Status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetWinningProposalID" />

            <Button
                android:id="@+id/buttonGetIsRegisteredVoter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Is Registered Voter?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetWorkflowStatus" />

            <!--            -->
            <TextView
                android:id="@+id/textViewAdminSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="2. Setter Functions for the Admin"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetIsRegisteredVoter" />

            <Button
                android:id="@+id/buttonSetRegisterVoter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Register Voter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAdminSet" />

            <Button
                android:id="@+id/buttonSetRegisterProposal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Register Proposal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetRegisterVoter" />

            <Button
                android:id="@+id/buttonSetStartVotingSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Start Voting Session"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetRegisterProposal" />


            <Button
                android:id="@+id/buttonSetEndVotingSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="End Voting Session"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetStartVotingSession" />

            <Button
                android:id="@+id/buttonSetStartProposalRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Start Proposal Registration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetEndVotingSession" />

            <Button
                android:id="@+id/buttonSetEndProposalRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="End Proposal Registration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetStartProposalRegistration" />

            <Button
                android:id="@+id/buttonSetTallyVotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Tally Votes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSetEndProposalRegistration" />

            <EditText
                android:id="@+id/editTextGetProposalDescription"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Proposal Index"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonGetProposalDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonGetProposalDescription" />

            <EditText
                android:id="@+id/editTextGetIsRegisteredVoter"
                android:layout_width="125dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Voter Address"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonGetIsRegisteredVoter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonGetIsRegisteredVoter" />

            <EditText
                android:id="@+id/editTextSetRegisterVoter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Voter Address"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonSetRegisterVoter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonSetRegisterVoter" />

            <EditText
                android:id="@+id/editTextSetRegisterProposal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Proposal Description"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonSetRegisterProposal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonSetRegisterProposal" />

         </androidx.constraintlayout.widget.ConstraintLayout>
      </ScrollView>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="3dp"
          android:layout_height="2dp"
          android:id="@+id/Progress"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</layout>